package email;
import java.util.*;

public class emailApp {

	public static void main(String args[])
	{
		email em=new email();
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter First Name:");
		em.setfname(sc.nextLine());
		System.out.println("Enter Last Name:");
		em.setlname(sc.nextLine());
		System.out.println("Enter Department Name:");
		em.setdept(sc.nextLine());
		System.out.println("Detail of Employee:");
		System.out.println("First Name:"+em.getfname());
		System.out.println("Last Name:"+em.getlname());
		System.out.println("Department:"+em.getdept());
		System.out.println("Your Password is:"+em.randomPassword());
		System.out.println("Your emailid is:"+em.generateEmailid());
		System.out.println("Mailbox_capacity:"+em.mailboxCapacity()+"mb");
		
	}

}
